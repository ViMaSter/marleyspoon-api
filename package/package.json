{
  "name": "marleyspoon",
  "version": "0.0.1",
  "description": "Fetch nutrition info from Marley Spoon.",
  "main": "client.js",
  "type": "module",
  "scripts": {
    "prepack": "cp ../README.MD ../LICENSE ."
  },
  "files": [
    "client.js"
  ],
  "engines": {
    "node": ">=22.16.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ViMaSter/marleyspoon-api.git"
  },
  "author": "Vincent Mahnke (vincent@mahn.ke)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ViMaSter/marleyspoon-api/issues"
  },
  "homepage": "https://github.com/ViMaSter/marleyspoon-api#readme",
  "release": {
    "branches": [
      {
        "name": "main"
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "docs",
              "scope": "README",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
